<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@drawable/contextual_bg</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoteActivity" parent="AppTheme">
    </style>

    <style name="ExtendedFab" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:letterSpacing">0.055</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">32dp</item>
    </style>

    <style name="PreviewCheckbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textAppearance">@style/PreviewCheckbox.Font
        </item>
        <item name="android:textColor">@color/checkbox_preview_color</item>
    </style>

    <style name="PreviewCheckbox.Font" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/checkbox_preview_color</item>
    </style>


</resources>
